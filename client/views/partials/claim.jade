            text-align: left ;
            width: 220px ;
            float: left; /* IMPORTANT */
            list-style-type: none;
            display: inline; /* IMPORTANT */
            box-shadow: 5px 5px rgba(0, 0, 0, 0.30);
        }

        li2.selected {
            border-color: #CC0000;
        }

        li2:hover {
            border-color: #1052ee;
            /*//#CC0000;*/
            background-color:#ffff00;
        }

        li2:hover span.nickname {
            display: block;
        }

